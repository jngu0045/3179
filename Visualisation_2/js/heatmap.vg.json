{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "IUCN Categories (Australia)",
    "data": {
        "url": "https://raw.githubusercontent.com/jngu0045/FIT3179/main/Visualisation_2/data/ausheatmap.csv"
      },
    "params": [{"name": "highlight", "select": "point"}],
    "mark": {"type": "rect", "strokeWidth": 2},
    "encoding": {
      "y": {
        "field": "Group",
        "type": "nominal"
      },
      "x": {
        "field": "Status",
        "type": "nominal"
      },
      "fill": {
        "field": "Count",
        "type": "quantitative"
      },
      "stroke": {
        "condition": {
          "param": "highlight",
          "empty": false,
          "value": "black"
        },
        "value": null
      },
      "opacity": {
        "condition": {"param": "highlight", "value": 1},
        "value": 0.5
      },
      "order": {"condition": {"param": "highlight", "value": 1}, "value": 0}
    },
    "config": {
      "scale": {
        "bandPaddingInner": 0,
        "bandPaddingOuter": 0
      },
      "view": {"step": 40},
      "range": {
        "ramp": {
          "scheme": "yellowgreenblue"
        }
      },
      "axis": {
        "domain": false
      }
    }
  }
  